<script>
document.getElementById('cpy').textContent='© '+new Date().getFullYear()+' ARAUKO. Todos los derechos reservados.';
const b=document.getElementById('burger'),d=document.getElementById('drawer');b&&b.addEventListener('click',()=>d.classList.toggle('hidden'));d&&d.querySelectorAll('a').forEach(a=>a.addEventListener('click',()=>d.classList.add('hidden')));
(async()=>{
  try{
    const r=await fetch('/assets/news.json',{cache:'no-store'}); const items=await r.json();
    const grid=document.getElementById('newsGrid');
    grid.innerHTML=items.map(it=>`
      <article class="rounded-2xl overflow-hidden border border-slate-200 bg-white shadow-sm">
        <img src="${it.image}" class="h-44 w-full object-cover" alt="${it.title}">
        <div class="p-5">
          <div class="text-xs text-slate-500">${it.type} • ${new Date(it.date).toLocaleDateString('es-AR')}</div>
          <h3 class="font-semibold mt-1">${it.title}</h3>
          <p class="text-sm text-slate-700 mt-2">${it.summary}</p>
          ${it.link?`<a class="inline-block mt-3 text-sm font-semibold text-emerald-700 hover:underline" href="${it.link}" target="_blank" rel="noopener">Ver más →</a>`:''}
        </div>
      </article>`).join('');
  }catch(e){console.error(e);}
})();
</script>
